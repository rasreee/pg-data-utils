{
  "compilerOptions": {
    "target": "ES2015",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "outDir": "dist/main",
    "baseUrl": ".", 
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", ".yarn", "__tests__"]
}